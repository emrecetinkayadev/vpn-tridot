APP_NAME=vpn-backend
APP_ENV=development
APP_VERSION=dev

HTTP_ADDR=:8080
HTTP_READ_TIMEOUT=5s
HTTP_WRITE_TIMEOUT=10s
HTTP_SHUTDOWN_TIMEOUT=15s

LOG_LEVEL=debug
LOG_REQUESTS_ENABLED=true
LOG_REQUEST_HEADERS=x-request-id,authorization
LOG_MASK_HEADERS=authorization,proxy-authorization,x-api-key,cookie,set-cookie
LOG_REQUEST_QUERY_PARAMS=token
LOG_MASK_QUERY_PARAMS=token,auth,code,password

CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-CSRF-Token
CORS_EXPOSE_HEADERS=Link
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=10m

CSRF_ENABLED=true
CSRF_ALLOWED_ORIGINS=http://localhost:3000
CSRF_PROTECTED_METHODS=POST,PUT,PATCH,DELETE
CSRF_ALLOW_NO_ORIGIN=true

METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_NAMESPACE=vpn_backend_dev
METRICS_SUBSYSTEM=http

RATE_LIMIT_RPS=20
RATE_LIMIT_BURST=40
RATE_LIMIT_AUTH_ENABLED=true
RATE_LIMIT_AUTH_RPS=15
RATE_LIMIT_AUTH_BURST=30
RATE_LIMIT_CHECKOUT_ENABLED=true
RATE_LIMIT_CHECKOUT_RPS=5
RATE_LIMIT_CHECKOUT_BURST=10
RATE_LIMIT_PEERS_ENABLED=true
RATE_LIMIT_PEERS_RPS=10
RATE_LIMIT_PEERS_BURST=20

POSTGRES_DSN=postgres://vpn_dev:password@localhost:5432/vpn_dev?sslmode=disable
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

JWT_SECRET=dev-secret-change-me
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=720h
AUTH_VERIFICATION_TTL=24h
AUTH_PASSWORD_RESET_TTL=1h

ARGON_MEMORY=65536
ARGON_ITERATIONS=3
ARGON_PARALLELISM=2
ARGON_SALT_LENGTH=16
ARGON_KEY_LENGTH=32

TOTP_ISSUER=VPN-MVP-Dev
TOTP_SECRET_LENGTH=32
TOTP_DIGITS=6
TOTP_PERIOD_SECONDS=30

BILLING_DEFAULT_CURRENCY=TRY
STRIPE_SECRET=sk_test_1234567890
STRIPE_WEBHOOK_SECRET=whsec_test
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/billing/cancel

IYZICO_API_KEY=test-iyzico-api-key
IYZICO_SECRET_KEY=test-iyzico-secret
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

NODE_PROVISION_TOKEN=dev-node-token

HCAPTCHA_ENABLED=false
HCAPTCHA_SECRET=
HCAPTCHA_SITEKEY=
HCAPTCHA_SCORE_THRESHOLD=0.5
HCAPTCHA_ENDPOINT=https://hcaptcha.com/siteverify

SOPS_SECRETS_ENABLED=false
SOPS_SECRETS_PATH=./secrets/backend.dev.json
SOPS_SECRETS_FORMAT=json

VAULT_ENABLED=false
VAULT_ADDR=https://vault.dev.example.com
VAULT_TOKEN=
VAULT_PATH=kv/data/vpn-backend/dev
VAULT_NAMESPACE=
VAULT_TIMEOUT=5s
VAULT_TLS_SKIP_VERIFY=false
